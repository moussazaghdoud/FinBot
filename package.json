{
  "name": "finbot",
  "version": "1.0.0",
  "description": "Investment Readiness Brief Dashboard - Geopolitics, Macro, Market Signals",
  "main": "src/server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon src/server/index.js",
    "client": "next dev src/client -p 3001",
    "worker": "node src/server/workers/ingestion.js",
    "build": "prisma generate",
    "start": "node src/server/index.js",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:seed": "node prisma/seed.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "openai": "^4.20.0",
    "node-fetch": "^2.7.0",
    "@prisma/client": "^5.7.0",
    "bullmq": "^4.15.0",
    "ioredis": "^5.3.2",
    "rss-parser": "^3.13.0",
    "cheerio": "^1.0.0-rc.12",
    "sanitize-html": "^2.11.0",
    "crypto-js": "^4.2.0",
    "ws": "^8.16.0",
    "winston": "^3.11.0",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "prisma": "^5.7.0",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}
